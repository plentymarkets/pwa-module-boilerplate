{
  "name": "@plentymarkets/pwa-module-boilerplate",
  "version": "1.0.0",
  "license": "MIT",
  "packageManager": "yarn@3.6.4",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "main": "./dist/module.cjs",
  "module": "./dist/module.mjs",
  "types": "./dist/types.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/module.mjs",
      "require": "./dist/module.cjs"
    },
    "./runtime/*": {
      "import": "./dist/runtime/*",
      "require": "./dist/runtime/*"
    }
  },
  "engines": {
    "yarn": ">=3.6.1",
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "yarn dev:prepare && nuxt-module-build build && tsc --emitDeclarationOnly",
    "dev:prepare": "yarn nuxt-module-build build --stub && nuxi prepare --watch",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "pathe": "^1.1.2"
  },
  "peerDependencies": {
    "nuxt": "^3.0.0",
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@nuxt/module-builder": "0.8.4",
    "@nuxtjs/i18n": "^9.1.0",
    "nuxt": "^3.14.1592",
    "typescript": "^5.7.2",
    "vue": "^3.5.13"
  }
}
